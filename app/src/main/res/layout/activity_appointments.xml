<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.PlanMyMeetings"
    android:background="@color/background_color"
    >

    <data>
        <variable
            name="viewModel"
            type="com.example.planmymeetings.screens.appointments.AppointmentsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.appointments.AppointmentsActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/appointmentsRecycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>