<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:width">250dp</item>
        <item name="android:height">55dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TitleText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/secondary_color</item>
        <item name="fontFamily">@font/audiowide</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>
    <style name="AuthInputField" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">50</item>
        <item name="background">@color/primary_color</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>
    <style name="AppointmentTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/secondary_color</item>

    </style>
</resources>